{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./api/js",
    "rootDir": "./api",
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false
  },
  "include": [
    "api/**/*"
  ],
  "exclude": [
    "api/start-api.js",
    "api/utils"
  ],
  "exclude": [
    "node_modules",
    "api/js"
  ]
}
