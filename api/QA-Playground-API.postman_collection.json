            "header": [],
            "url": {
              "raw": "{{base_url}}/users?scenario=error-401",
              "host": ["{{base_url}}"],
              "path": ["users"],
              "query": [
                {
                  "key": "scenario",
                  "value": "error-401"
                }
              ]
